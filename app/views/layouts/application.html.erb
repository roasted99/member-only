<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <div class="navbar-brand">
          <%= link_to root_path, class: "nav-item text-decoration-none" do %>
            <h1>Hot Takes!</h1>
            <% end %>

         <div class="collapse" data-target="#navbarExample">
          <div class="bg-light shadow-3 p-4">
            <span></span>
            <span></span>
            <span></span>
          </div>
          </div>
        </div>

       <div id="navbarExample" class="nav-item">   
        <div class="navbar-nav">
          <div class="nav-item">
            <%= link_to 'New Post', new_post_path, class: "btn btn-secondary" %>
          </div>
          <% if user_signed_in? %>
            <p class="nav-item">
            <%= link_to current_user.name, edit_user_registration_path, class: "btn btn-dark" %>
          </p>
          <p class="nav-item">
            <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "btn btn-dark" %>
          </p>
          <% else %>
             <p class="nav-item">
            <%= link_to 'Sign In', new_user_session_path, class: "btn btn-dark" %>
          </p>
             <p class="nav-item">
            <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-dark" %>
          </p>
          <% end %>
         
        </div>
      </div>

    
    </div>

    </nav>

    <%= yield %>
  </body>
</html>
