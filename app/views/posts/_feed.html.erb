
<% @posts.each do |post| %>
    <article class="card border-secondary mb-3">

      <div class="card-body">
        <div>
          <h2 class="card-title"><strong><%= post.title %></strong></h2>
          <p class="card-text"><%= post.body %></p>
        </div>

        <% if user_signed_in? %>
        <div>
          <img src="">
          <strong><%= post.user.name %></strong><br />
          <small><%= post.user.username %></small><br/>
        </div>
      </div>

      <div class="card-footer justify-content-end">
        <ul class="list-group list-group-horizontal">
          <li class="list-group-item"><%= link_to "Edit", edit_post_path(post) %></li>
          <li class="list-group-item"><%= link_to "Destroy", post_path(post),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %></li>
        </ul>
      </div>
      <% end %>
    </article>
 <% end %>
